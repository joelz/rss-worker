<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/jobs?user=<%= user._id %>"
       data-title="<%= user.name %> | <%= ({m: '男', f: '女', x: '保密'})[user.gender] %>"
       data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/jobs">
      <div class="field required">
        <label>标题</label>
        <input type="text" name="title">
      </div>
      <div class="field required">
        <label>URL</label>
        <input type="text" name="url">
      </div>
      <div class="field required">
        <label>Actions</label>
        <input type="text" name="actions">
      </div>
      <div class="field required">
        <label>启用</label>
        <input type="checkbox" name="active">
      </div>
      <input type="submit" class="ui button" value="提交">
    </form>
  </div>
</div>

<%- include('footer') %>