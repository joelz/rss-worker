<%- include('header') %>

<h3><a href="/jobs/<%= job._id %>"><%= job.title %></a> 的 Post列表</h3>

<% if (!posts || posts.length == 0) { %>
    <p>目前还没有抓取到任何内容。如果还没创建过Job，您可以先<a href="/jobs/create">创建Job</a>。</p>
<% } %>

<% posts.forEach(function (post) { %>
<div class="row " style="border:2px solid #eceeef;">
    <div class="col-md-12">
      <h4 ><a href="/posts/<%= post._id %>"> <%= post.title %></a></h4>
    </div>
    <div class="col-md-2">
      <span class="glyphicon glyphicon-home"></span><a href="/jobs/<%= post.job._id %>" class="text-primary"> <%= post.job.title %></a>
    </div>
    <div class="col-md-10">
      <span class="glyphicon glyphicon-time"></span><%= post.pub_at %>
    </div>
</div>
<% }) %>

<ul class="pager">
<% if ( pagerParam.firstId != -1) { %>
  <li><a href="/jobs/<%= job._id %>/posts?prev=<%= pagerParam.firstId %>">Previous</a></li>
<% } %>
<% if ( pagerParam.lastId != -1) { %>
  <li><a href="/jobs/<%= job._id %>/posts?next=<%= pagerParam.lastId %>">Next</a></li>
<% } %>
</ul>

<%- include('footer') %>

